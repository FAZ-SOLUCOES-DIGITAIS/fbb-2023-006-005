.tela.mod5tela4
  position relative
  min-height 100%
  width 100%
  height 100% /* cross-browser */
  height calc(100 * var(--vh))
  overflow hidden

  .screen
    &.screen-0

      &.bg-0
        background url('../assets/images/mod5/imagens/imagem_08.png')
        background-color #01c0e1
        background-size contain
        background-position center right
        background-repeat no-repeat
        padding 0
        //background #000
      &.bg-1
        background url('../assets/images/mod5/imagens/imagem_09.png')
        background-color #01c0e1
        background-size contain
        background-position center right
        background-repeat no-repeat
        padding 0
        //background #000


  .items

    .items-content
      // min-height 14rem

      .item
        min-height 13rem
        display flex
        //align-items center
        flex-direction column
        justify-content center
        gap 1rem
        background #fff

    .click-items
      margin-top 1.5rem
      display flex
      align-items center
      justify-content center
      gap 0.5rem

      .click-item
        width 1.5rem
        height 1.5rem
        background #fff
        border 1px solid #000
        transition all 0.3s

        &.completed
          background #666

        &.current
          background #01c0e1
          width 1.8rem
          height 1.8rem

  .nav-buttons
    position absolute
    width 100%
    left 0
    top 0
    z-index 1000

    .nav-button
      position absolute
      top 50vh
      transform translateY(-50%)

      img
        max-height 2.5rem

      &.prev
        left 1rem

      &.next
        right 1rem



@media only screen and (orientation:portrait)
  .tela.mod5tela4
    position relative

    .screen
      &.screen-0
        .container-fluid
          padding-left 30px
          padding-right 30px

      .items
        transform translateY(50%)

      &.screen-0
        &.bg-0
          background-position top right

        &.bg-1
          background-position top right

    .nav-buttons
      .nav-button
        &.prev
          left 0

        &.next
          right 0
