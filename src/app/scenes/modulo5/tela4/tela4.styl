  .items

    .items-content
      // min-height 14rem

      .item
        min-height 13rem
        display flex
        //align-items center
        flex-direction column
        justify-content center
        gap 1rem
        background #fff

    .click-items
      margin-top 1.5rem
      display flex
      align-items center
      justify-content center
      gap 0.5rem

      .click-item
        width 1.5rem
        height 1.5rem
        background #fff
        border 1px solid #000
        transition all 0.3s

        &.completed
          background #666

        &.current
          background #01c0e1
          width 1.8rem
          height 1.8rem

  .nav-buttons
    position absolute
    width 100%
    left 0
    top 0
    z-index 1000

    .nav-button
      position absolute
      top 50vh
      transform translateY(-50%)

      img
        max-height 2.5rem

      &.prev
        left 1rem

      &.next
        right 1rem



