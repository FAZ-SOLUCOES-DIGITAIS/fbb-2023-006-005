.tela.mod5tela3
  position relative
  min-height 100%
  width 100%
  height 100% /* cross-browser */
  height calc(100 * var(--vh))
  overflow hidden

  .screen
    &.screen-0

      &.bg-0
        background url('../assets/images/mod5/imagens/imagem_05.png')
        background-color #fff
        background-size 60%
        background-position left 96% bottom 50%
        background-repeat no-repeat
        padding 0
        //background #000
      &.bg-1
        background url('../assets/images/mod5/imagens/imagem_06.png')
        background-color #fff
        background-size 60%
        background-position left 96% bottom 50%
        background-repeat no-repeat
        padding 0
        //background #000
      &.bg-2
        background url('../assets/images/mod5/imagens/imagem_07.png')
        background-color #fff
        background-size 60%
        background-position left 96% bottom 50%
        background-repeat no-repeat
        padding 0
        //background #000

        // &:after
        //   content ""
        //   position absolute
        //   left 0
        //   bottom 0
        //   width 50%//calc((100% / 12) * 1)
        //   height calc(90%)
        //   background url(../assets/images/mod5/imagens/imagem_04.png)
        //   background-size contain
        //   background-position center bottom
        //   background-repeat no-repeat
        //   pointer-events none

      &:after
        content ""
        position absolute
        left 0
        top 0
        z-index -3
        width 35%//calc((100% / 12) * 1)
        height calc(100%)
        background url(../assets/images/mod5/grafismos/grafismo_03.png)
        background-size contain
        background-position left top
        background-repeat no-repeat
        pointer-events none

      &:before
        content ""
        position absolute
        right 0
        bottom 0
        width 30%//calc((100% / 12) * 1)
        height calc(100%)
        background url(../assets/images/mod5/grafismos/grafismo_01.png)
        background-size contain
        background-position left top
        background-repeat no-repeat
        pointer-events none
        transform rotate(180deg)
        padding 0


  .items

    .items-content
      min-height 25rem
      display flex
      align-items center

      .item
        display flex
        //align-items center
        flex-direction column
        justify-content center
        gap 1rem
        background #01c0e1

    .click-items
      margin-top 1.5rem
      display flex
      align-items center
      justify-content center
      gap 0.5rem

      .click-item
        width 1.5rem
        height 1.5rem
        background #fff
        border 1px solid #000
        transition all 0.3s

        &.completed
          background #666

        &.current
          background #01c0e1
          width 1.8rem
          height 1.8rem

  .nav-buttons
    position absolute
    width 100%
    left 0
    top 0
    z-index 1000

    .nav-button
      position absolute
      top 50vh
      transform translateY(-50%)

      img
        max-height 2.5rem

      &.prev
        left 1rem

      &.next
        right 1rem



@media only screen and (orientation:portrait)
  .tela.mod5tela3
    position relative
