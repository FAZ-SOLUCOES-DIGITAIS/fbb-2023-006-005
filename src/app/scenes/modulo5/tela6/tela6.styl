.tela.mod5tela6
  position relative
  min-height 100%
  width 100%
  height 100% /* cross-browser */
  height calc(100 * var(--vh))
  overflow hidden


  .screen
    &.screen-0
      &.bg-10
        background url('../assets/images/mod5/imagens/imagem_10.png')
        background-color #fff
        background-size contain
        background-position left top
        background-repeat no-repeat
        padding 0
        //background #000

      &:before
        content ""
        position absolute
        right 0
        bottom 0
        width 15%//calc((100% / 12) * 1)
        height calc(100%)
        background url(../assets/images/mod5/grafismos/grafismo_02.png)
        background-size contain
        background-position right bottom
        background-repeat no-repeat
        pointer-events none

  .items
    gap 1rem

    .items-title
      padding-left 2rem

    .items-content
      //min-height 10rem
      gap 1rem

      .item
        // min-height 10rem
        display flex
        //align-items center
        flex-direction column
        justify-content center


  .nav-buttons
    position absolute
    width 100%
    left 0
    top 0
    z-index 1000

    .nav-button
      position absolute
      top 50vh
      transform translateY(-50%)

      img
        max-height 2.5rem

      &.prev
        left 1rem

      &.next
        right 1rem



@media only screen and (orientation:portrait)
  .tela.mod5tela6
    position relative
