.tela.mod6tela4
  position relative
  min-height 100%
  width 100%
  height 100% /* cross-browser */
  height calc(100 * var(--vh))
  overflow hidden
  //background url('../assets/images/bgs/bg_14.png')
  background-color #000
  background-size cover
  background-position bottom center
  background-repeat no-repeat
  //background-attachment fixed

  .screen
    &.screen-0
      padding 0
      //background #000

      &:before
        content ""
        position absolute
        right 0
        top 0
        width calc((100% / 12) * 6)
        height calc(100%)
        background url(../assets/images/imagens/imagem_25.png)
        background-size contain
        background-position right center
        background-repeat no-repeat
        pointer-events none

      .box1
        background url(../assets/images/formas/forma_01.png) no-repeat
        background-size 100% 100%


@media only screen and (orientation:portrait)
  .tela.mod6tela4
    position relative
