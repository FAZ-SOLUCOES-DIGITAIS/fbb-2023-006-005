.tela.mod2tela2
  position relative
  min-height 100%
  width 100%
  height 100% /* cross-browser */
  height calc(100 * var(--vh))
  overflow hidden
  background url('../assets/images/px/bgs/bg_13.png')
  background-size cover
  background-position center
  background-repeat no-repeat
  background-attachment fixed

  .screen
    &.screen-0
      padding 0
      background #fff

      &:before
        content ""
        position absolute
        right 0
        bottom 0
        width calc((100% / 12) * 6 - 2rem)
        height calc(40%)
        background url(../assets/images/imagens/grafismo_02.png)
        background-size cover
        background-position right bottom
        background-repeat no-repeat
        pointer-events none

@media only screen and (orientation:portrait)
  .tela.mod2tela2
    position relative
