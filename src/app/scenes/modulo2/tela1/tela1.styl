.tela.mod2tela1
  position relative
  min-height 100%
  width 100%
  height 100% /* cross-browser */
  height calc(100 * var(--vh))
  overflow hidden
  background url('../assets/images/bgs/bg_06.png')
  background-color #fff
  background-size cover
  background-position center
  background-repeat no-repeat
  //background-attachment fixed

  .screen
    &.screen-0
      padding 0
      //background #fff

      &:before
        content ""
        position absolute
        right 0
        top 0
        width calc((100% / 12) * 6)
        height calc(100%)
        background url(../assets/images/imagens/imagem_12.png)
        background-size contain
        background-position right center
        background-repeat no-repeat
        pointer-events none

@media only screen and (orientation:portrait)
  .tela.mod2tela1
    position relative
