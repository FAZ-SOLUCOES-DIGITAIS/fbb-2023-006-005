      .cell
        position absolute
        right 0
        bottom 0
        width auto
        height 85%
        display flex
        align-items flex-end
        justify-content flex-end

        &:after
          content ""
          position absolute
          left 28%
          top 37%
          width 4rem
          height 4rem
          background url(../assets/images/imagens/icone_play.png) no-repeat
          background-size cover
          transform translateX(-50%) translateY(-50%)
          pointer-events none

        img
          max-height 100%

@media only screen and (orientation:portrait)
