  min-height 100%
  width 100%
  height 100% /* cross-browser */
  height calc(100 * var(--vh))
  overflow hidden
  background url('../assets/images/bgs/bg_05.png')
  background-size cover
  background-position center
  background-repeat no-repeat
  background-attachment fixed

