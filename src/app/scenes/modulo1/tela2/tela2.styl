.tela.mod1tela2
  position relative
  min-height 100%
  width 100%
  height 100% /* cross-browser */
  height calc(100 * var(--vh))
  overflow hidden
  background url('../assets/images/px/bgs/bg_06.png')
  background-size cover
  background-position center
  background-repeat no-repeat
  background-attachment fixed

  .screen
    &.screen-0
      padding 0
      background #fff
      padding-top 4rem

      &:before
        content ""
        position absolute
        left 0
        top 0
        width calc((100% / 12) * 12)
        height calc(100%)
        background url(../assets/images/imagens/imagem_05.png)
        background-size 100% auto
        background-position bottom center
        background-repeat no-repeat
        pointer-events none


  @media only screen and (orientation:portrait)
    .screen
      position relative
