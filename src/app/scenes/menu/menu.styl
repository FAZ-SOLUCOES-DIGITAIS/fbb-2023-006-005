.tela.menu
  position relative
  min-height 100%
  width 100%
  height 100% /* cross-browser */
  height calc(100 * var(--vh))
  overflow hidden

  .screen
    &.screen-0
      padding 0
      background url(../assets/images/bgs/bg_04.png)
      background-size cover
      background-position center
      background-repeat no-repeat

      &:before
        content ""
        position absolute
        left calc((100% / 12) * 1.5)
        top 0
        width calc((100% / 12) * 6)
        height calc(90%)
        background #fff

      &:after
        content ""
        position absolute
        right 0
        bottom 0
        width calc((100% / 12) * 6)
        height calc(85%)
        background url(../assets/images/imagens/imagem_03.png)
        background-size contain
        background-position left bottom
        background-repeat no-repeat
        pointer-events none

      &.blur
        filter blur(8px) grayscale(1)


  .welcome-screen
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background rgba(0,0,0,0.4)
    display table
    z-index 1000

    .welcome-container
      display table-cell
      vertical-align middle

      .welcome-content
        padding 2.5rem 3rem
        width 26rem
        //min-height 20rem
        height auto
        text-align left
        margin 0 auto
        background white
        background-size 100% 100%

  .pulse2
    animation 1s pulse2 infinite
    transform-origin center


  .ep-btn
    position relative
    max-width 10rem
    height 3rem
    background #000
    display flex
    align-items center
    justify-content center

    p
      color #fff
      text-transform uppercase
      font-weight 500

  .final-screen
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background url(../assets/images/bgs/bg_16.png) no-repeat
    background-size cover
    background-position center
    z-index 1100
    display flex
    align-items center

    &:before
      content ""
      position absolute
      left 0
      bottom 0
      width calc((100% / 12) * 6)
      height calc(90%)
      background url(../assets/images/imagens/imagem_27.png)
      background-size contain
      background-position bottom right
      background-repeat no-repeat
      pointer-events none

    .final-content
      position relative
      width 100%
      display flex
      align-items center

      .row
        width 100%


  @media only screen and (orientation: landscape) and (max-width: 850px)
    .welcome-screen

      .welcome-container

        .welcome-content
          width 75vw
          min-height calc(65vw * 0.8)

  @media only screen and (orientation:portrait)
    .container-fluid
      .table-cell
        display block
        margin-top 2rem

    .menu-bg

      #bg-video
        display block
        height auto
        left auto
        max-width none
        height 100%
        min-width 100%
        right auto
        position absolute
        top 0
        width auto
        bottom 0%
        top 50%
        transform translateX(0%) translateY(0%)

    .welcome-screen
      .welcome-container

        .welcome-content
          padding calc(90vw * 0.8 * 0.25) 7em 5em 4em
          width 90vw
          min-height calc(90vw * 0.8)
          height auto
          text-align left
          margin 0 auto

    .eps
      position relative
      width 100%
      height 100vw
      margin-top 4rem

      .ep-btn

        &.ep01
          left 50%
          top 0
          transform translateX(-50%) translateY(-1rem)
          height 11rem
        &.ep02
          right 0%
          top 30%
          transform translateY(-50%)
        &.ep03
          right 0%
          bottom 30%
          transform translateY(50%)
        &.ep04
          left 50%
          bottom 0
          transform translateX(-50%) translateY(1.8rem)
          height 11.8rem
        &.ep05
          left 0%
          top 30%
          transform translateY(-50%)
        &.ep06
          left 0%
          bottom 30%
          transform translateY(50%)


@keyframes pulse2
  0%
    transform scale(1.05)
  50%
    transform scale(0.9)
  100%
    transform scale(1.05)



