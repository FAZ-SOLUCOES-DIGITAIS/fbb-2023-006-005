.scroll
  position relative
  width 100%
  height 100%
  
  .scroll-bar
    position absolute
    z-index 400
    
    .scroll-bar-up
      display none
      position relative
      //left 0px
      //top 0px
      //width 100%
      //height 20px
      text-align center
      line-height 20px
      
      &:after
        content '\f139'
        font-family FontAwesome
        font-size 20px
        color white
        
      
    .scroll-bar-slider
      position relative
      //left 9px
      //top 25px
      width 100%
      height 100%//calc(100% - 50px)
      background transparent
      
      .scroll-bar-slider-picker
        position absolute
        width 20px
        height 80px
        //border-radius 50%
        background rgba(0,0,0,0.6)
        left 0px
        top 0px
        cursor n-resize
      
    .scroll-bar-down
      display none
      position relative
      //left 0px
      //bottom 0px
      //width 100%
      //height 20px
      text-align center
      line-height 20px
      
      &:after
        content '\f13a'
        font-family FontAwesome
        font-size 20px
        color white